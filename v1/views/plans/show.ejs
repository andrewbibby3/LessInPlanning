<% include ../partials/header %>
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Lessin Planning <%= plan.title %></p>
            <div class="list-group">
                <li class="list-group-item active">Year Standards</li>
                <li class="list-group-item">Unit Standards</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="caption-full">
                <h4 class="pull-right">December</h4>
                <h4><a><%=plan.title%></a></h4>
                <p>
                    <em>Submitted By <%= plan.author.username %></em>
                </p>
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                <% } %>
            </div>
            <p><%= plan.body %></p>
        </div>
    </div>

<% include ../partials/footer %>