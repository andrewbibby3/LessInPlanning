<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/plans/<%=plan._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" value="<%= plan.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="type" value="<%= plan.type %>">
                    <!--this will eventually be a dropdown menu of these types-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Author" value="<% currentUser._id %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="grade" value="<%= plan.grade %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subject" value="<%= plan.subject %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="unit" value="<%= plan.unit %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="parent" value="<%= plan.parent %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <input id="plan-body" class="form-control" type="text" name="body" value="<%= plan.body %>">
                    <!--want to remove this and have this eventually default to the parent of this lesson-->
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
